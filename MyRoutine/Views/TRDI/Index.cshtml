<table class="table table-bordered table-striped table-hover" id="opterator">
    <thead>
        <tr class="btn-primary">
            <th>
                @Html.DisplayNameFor(model=>model.First().OperatorId)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.First().OperatorName)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.First().Authority)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.First().AddDate)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.First().UpdDate)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.First().UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.First().ComputerName)
            </th>

        </tr>

    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem=>item.OperatorId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.OperatorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.Authority)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem=>item.AddDate)
                </td>
                    <td>
                    @Html.DisplayFor(modelItem=>item.UpdDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=>item.ComputerName)
                </td>

            </tr>
        }
    </tbody>
</table>

